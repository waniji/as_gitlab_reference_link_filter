-# -*- coding: utf-8 -*-
.yield
 = render :partial => "shared/room_info", :locals => { :room => @room, :has_button => false }
 .configure
  =form_for :config, :url => {:action => :room } do |form|
   %fieldset
    %legend= t(:input_gitlab_root)
    =text_field :config, :root, {:class => :text, :autofocus => true, :placeholder => t(:placeholder_gitlab_root)}
   %fieldset
    %legend= t(:input_repository_name)
    =text_field :config, :repository_name, {:class => :text, :autofocus => true, :placeholder => t(:placeholder_repository_name)}
   =submit_tag t(:update_config), :class => "submit red button large"

